---
# https://github.com/bnijenhuis/bnijenhuis-nl/blob/main/social-preview.njk
pagination:
  data: collections.onlyMarkdown
  size: 1
  alias: preview
permalink: '/assets/images/social-preview/{{ preview.page.url | slugify }}-preview.svg'
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="1200" height="628" viewBox="0 0 1200 628" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
>
  {% set titleInLines = preview.data.title | splitlines(24) %}
  {% set numberOfLines = titleInLines.length %}
  {% if numberOfLines == 1 %}
  {% set verticalStartingPoint = 340 %}
  {% elseif numberOfLines == 2 %}
  {% set verticalStartingPoint = 330 %}
  {% elseif numberOfLines == 3 %}
  {% set verticalStartingPoint = 320 %}
  {% elseif numberOfLines == 4 %}
  {% set verticalStartingPoint = 310 %}
  {% elseif numberOfLines == 5 %}
  {% set verticalStartingPoint = 300 %}
  {% endif %}

  <!-- SVG background, generate your own on: https://app.haikei.app/  -->
  <svg id="visual" viewBox="0 0 1200 628" width="1200" height="628" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1">
  	<rect x="0" y="0" width="1200" height="628" fill="#1F58AD"></rect>
  	<rect x="0" y="0" width="1200" height="160" fill="#0D2B58"></rect>
  </svg>

  <!-- date -->
  {% if preview.data.layout == 'post' %}
  <text
    font-family="Lalezar, Redhat, Roboto, 'Helvetica Neue', sans-serif"
    font-size="24"
    fill="#e8e8e8"
    letter-spacing="-1"
  >
    <tspan x="210" y="{{ verticalStartingPoint - 120 }}">
      {{ preview.date | formatDate('DD MMMM YYYY') }}
    </tspan>
  </text>
  {% endif %}

  <!-- title -->
  <text
    id="text"
    font-family="Lalezar, Redhat, Roboto, 'Helvetica Neue', sans-serif"
    font-size="80"
    fill="#e8e8e8"
    letter-spacing="-3"
  >
    {% for line in titleInLines %}
    <tspan x="210" y="{{ verticalStartingPoint - 20 + loop.index0 * 80 }}">
      {{ line }}
    </tspan>
    {% endfor %}
  </text>

  <!-- sitename -->
  <text
  font-family="Lalezar, Redhat, Roboto, 'Helvetica Neue', sans-serif"
    font-size="60"
    fill="#e8e8e8"
  >
    <tspan x="210" y="80">{{ meta.siteName }}</tspan>
  </text>

  <!-- url -->
  <text
  font-family="Lalezar, Redhat, Roboto, 'Helvetica Neue', sans-serif"
    font-size="24"
    fill="#e8e8e8"
    letter-spacing="-0.5"
  >
    <tspan x="210" y="600">{{ meta.url | replace("https://", "") | replace("http://", "") }}</tspan>
  </text>

</svg>
